generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STAFF
  HOST
  CLIENT
}

enum LayoutStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SeatStatus {
  AVAILABLE
  HELD
  RESERVED
  BLOCKED
}

enum ReservationStatus {
  HELD
  CONFIRMED
  CANCELLED
  EXPIRED
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentProvider {
  MERCADOPAGO
  CODI
  SPEI
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  CANCELLED
}

enum BankReferenceStatus {
  PENDING
  RECONCILED
  CANCELLED
}

enum BankReferenceMethod {
  SPEI
  CODI
  CASH
}

enum WaitlistScope {
  VENUE
  USER
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  role         Role       @default(CLIENT)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  sessions     Session[]
  layouts      Layout[]   @relation("LayoutCreator")
  layoutVersions LayoutVersion[] @relation("LayoutVersionCreator")
  auditLogs    AuditLog[] @relation("AuditActor")
  waitlistEntries WaitlistEntry[]
  reconciliationNotes ReconciliationNote[]
}

model Session {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  tokenHash  String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Layout {
  id          String           @id @default(uuid())
  name        String
  description String?
  venueId     String
  zoneId      String?
  version     Int              @default(1)
  json        Json
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  publishedAt DateTime?
  createdBy   String?
  creator     User?            @relation("LayoutCreator", fields: [createdBy], references: [id])
  versions    LayoutVersion[]
  events      Event[]
  status      LayoutStatus     @default(DRAFT)
}

model LayoutVersion {
  id        String   @id @default(uuid())
  layout    Layout   @relation(fields: [layoutId], references: [id])
  layoutId  String
  version   Int
  json      Json
  createdAt DateTime @default(now())
  createdBy String?
  creator   User?    @relation("LayoutVersionCreator", fields: [createdBy], references: [id])
}

model MediaAsset {
  id        String   @id @default(uuid())
  name      String
  kind      String
  url       String
  filePath  String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id             String          @id @default(uuid())
  name           String
  venueId        String
  zoneId         String?
  layout         Layout          @relation(fields: [layoutId], references: [id])
  layoutId       String
  startsAt       DateTime
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  tables         Table[]
  waitlistPolicy WaitlistPolicy?
  waitlistEntries WaitlistEntry[]
  holdingTokens  HoldingToken[]
  reservations   Reservation[]
}

model Table {
  id              String   @id @default(uuid())
  event           Event    @relation(fields: [eventId], references: [id])
  eventId         String
  layoutElementId String
  zoneId          String?
  capacity        Int
  seats           Seat[]
  waitlistEntries WaitlistEntry[]
  holdingTokens   HoldingToken[]
  reservations    Reservation[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Seat {
  id         String     @id @default(uuid())
  table      Table      @relation(fields: [tableId], references: [id])
  tableId    String
  label      String
  status     SeatStatus @default(AVAILABLE)
  holdEndsAt DateTime?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  history    SeatStatusHistory[]
  reservations ReservationSeat[]
}

model SeatStatusHistory {
  id        String     @id @default(uuid())
  seat      Seat       @relation(fields: [seatId], references: [id])
  seatId    String
  status    SeatStatus
  changedAt DateTime   @default(now())
}

model WaitlistPolicy {
  id          String  @id @default(uuid())
  event       Event   @relation(fields: [eventId], references: [id])
  eventId     String  @unique
  maxSize     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WaitlistEntry {
  id        String        @id @default(uuid())
  event     Event         @relation(fields: [eventId], references: [id])
  eventId   String
  table     Table?        @relation(fields: [tableId], references: [id])
  tableId   String?
  user      User?         @relation(fields: [userId], references: [id])
  userId    String?
  scope     WaitlistScope
  createdAt DateTime      @default(now())
  priorities WaitlistPriority?
}

model WaitlistPriority {
  id        String        @id @default(uuid())
  entry     WaitlistEntry @relation(fields: [entryId], references: [id])
  entryId   String        @unique
  priority  Int
  notes     String?
  createdAt DateTime      @default(now())
}

model HoldingToken {
  id        String             @id @default(uuid())
  token     String             @unique
  event     Event              @relation(fields: [eventId], references: [id])
  eventId   String
  table     Table?             @relation(fields: [tableId], references: [id])
  tableId   String?
  expiresAt DateTime
  seats     ReservationSeat[]
  reservation Reservation?     @relation("ReservationHoldingToken")
  createdAt DateTime           @default(now())
}

model Reservation {
  id             String            @id @default(uuid())
  event          Event             @relation(fields: [eventId], references: [id])
  eventId        String
  table          Table             @relation(fields: [tableId], references: [id])
  tableId        String
  holdingToken   HoldingToken?     @relation("ReservationHoldingToken", fields: [holdingTokenId], references: [id])
  holdingTokenId String?           @unique
  status         ReservationStatus @default(HELD)
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  seats          ReservationSeat[]
  order          Order?
  cancelledAt    DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
}

model ReservationSeat {
  id              String        @id @default(uuid())
  reservation     Reservation?  @relation(fields: [reservationId], references: [id])
  reservationId   String?
  seat            Seat          @relation(fields: [seatId], references: [id])
  seatId          String        @unique
  holdingToken    HoldingToken? @relation(fields: [holdingTokenId], references: [id])
  holdingTokenId  String?
  status          SeatStatus
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Order {
  id              String            @id @default(uuid())
  reservation     Reservation?      @relation(fields: [reservationId], references: [id])
  reservationId   String?           @unique
  customerName    String?
  customerEmail   String?
  customerPhone   String?
  totalAmount     Decimal           @db.Decimal(10, 2)
  currency        String            @default("MXN")
  status          OrderStatus       @default(PENDING)
  items           OrderItem[]
  paymentAttempts PaymentAttempt[]
  bankReferences  BankReference[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model OrderItem {
  id          String   @id @default(uuid())
  order       Order    @relation(fields: [orderId], references: [id])
  orderId     String
  description String
  quantity    Int      @default(1)
  unitPrice   Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PaymentAttempt {
  id            String          @id @default(uuid())
  order         Order           @relation(fields: [orderId], references: [id])
  orderId       String
  provider      PaymentProvider
  status        PaymentStatus   @default(PENDING)
  amount        Decimal?        @db.Decimal(10, 2)
  externalId    String?
  metadata      Json?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  mercadoPago   MercadoPagoPayment?
  codiCharge    CodiCharge?
  speiReference SpeiReference?
}

model MercadoPagoPayment {
  id               String         @id @default(uuid())
  paymentAttempt   PaymentAttempt @relation(fields: [paymentAttemptId], references: [id])
  paymentAttemptId String         @unique
  preferenceId     String
  initPoint        String?
  sandboxInitPoint String?
  status           String?
  rawResponse      Json?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model CodiCharge {
  id               String         @id @default(uuid())
  paymentAttempt   PaymentAttempt @relation(fields: [paymentAttemptId], references: [id])
  paymentAttemptId String         @unique
  codiId           String
  qrData           String
  status           String?
  rawResponse      Json?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model SpeiReference {
  id               String         @id @default(uuid())
  paymentAttempt   PaymentAttempt @relation(fields: [paymentAttemptId], references: [id])
  paymentAttemptId String         @unique
  reference        String         @unique
  expiresAt        DateTime?
  status           String?
  receiptUrl       String?
  rawResponse      Json?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model BankReference {
  id            String               @id @default(uuid())
  order         Order                @relation(fields: [orderId], references: [id])
  orderId       String
  status        BankReferenceStatus  @default(PENDING)
  method        BankReferenceMethod
  reference     String               @unique
  amount        Decimal              @db.Decimal(10, 2)
  expiresAt     DateTime?
  receiptUrl    String?
  notes         ReconciliationNote[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
}

model ReconciliationNote {
  id              String         @id @default(uuid())
  reference       BankReference  @relation(fields: [referenceId], references: [id])
  referenceId     String
  user            User?          @relation(fields: [userId], references: [id])
  userId          String?
  note            String?
  receiptUrl      String?
  createdAt       DateTime       @default(now())
}

model NotificationQueue {
  id         String   @id @default(uuid())
  event      String
  payload    Json
  status     String   @default("pending")
  attempts   Int      @default(0)
  lastError  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deliveredAt DateTime?
}

model AuditLog {
  id           String   @id @default(uuid())
  action       String
  resourceType String
  resourceId   String
  actorId      String?
  actor        User?    @relation("AuditActor", fields: [actorId], references: [id])
  metadata     Json?
  createdAt    DateTime @default(now())
}
